{
  "name": "hono-open-api-starter",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "prepare": "husky",
    "start": "npm run dev",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.1",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^0.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^11.3.0-beta.2",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "5.7.3"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ]
  }
}
