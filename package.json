{
  "name": "hono-open-api-starter",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "prepare": "husky",
    "start": "npm run dev",
    "test": "turbo run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ]
  },
  "prettier": "@vercel/style-guide/prettier",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^11.3.0-beta.2",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "5.7.3"
  },
  "packageManager": "npm@10.9.0",
  "engines": {
    "node": ">=22"
  }
}
